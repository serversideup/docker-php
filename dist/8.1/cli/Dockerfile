## DO NOT EDIT THIS FILE -- YOUR CHANGES WILL BE OVERWRITTEN ##
## This file is generated by `build.sh` and sourced from `./src` ##

#####################################################
# Server Side Up -  PHP 8.1 / CLI image 
#####################################################

# Default upstream channel to `null` so we default pulling `serversideup/s6-overlay:ubuntu-22.04`
# but can also pull the beta image from `serversideup/s6-overlay:beta-ubuntu-22.04`
ARG UPSTREAM_CHANNEL=''
ARG BASE_OS_VERSION='ubuntu-22.04'

###############
# Respository Configuration Stage
###############
FROM serversideup/s6-overlay:${UPSTREAM_CHANNEL}${BASE_OS_VERSION} as repo-config

RUN apt-get update \
    && apt-get install -y --no-install-recommends gnupg2 software-properties-common \
    && add-apt-repository -y ppa:ondrej/php

###############
# Final Image
###############
FROM serversideup/s6-overlay:${UPSTREAM_CHANNEL}${BASE_OS_VERSION}
LABEL maintainer="Jay Rogers (@jaydrogers)"

# Make sure we keep apt silent during installs. Set other defaults as well
ENV DEBIAN_FRONTEND=noninteractive \
    S6_BEHAVIOUR_IF_STAGE2_FAILS=2 \
    S6_VERBOSITY=1 \
    COMPOSER_ALLOW_SUPERUSER=1 \
    COMPOSER_HOME=/composer \
    COMPOSER_MAX_PARALLEL_HTTP=24 \
    WEBUSER_HOME="/var/www/html" \
    PUID=9999 \
    PGID=9999

COPY --from=repo-config /etc/apt/sources.list.d/ /etc/apt/sources.list.d/
COPY --from=repo-config /etc/apt/trusted.gpg.d/ondrej-ubuntu-php.gpg /etc/apt/trusted.gpg.d/ondrej-ubuntu-php.gpg

# Install Ondrej repos for Ubuntu, PHP, composer and selected extensions
RUN apt-get update \
    && echo "Add the default, non-privileged user..." \
    && groupadd -r -g $PGID webgroup \
    && useradd --no-log-init -r -s /usr/bin/bash -d $WEBUSER_HOME -u $PUID -g $PGID webuser \
    && echo "Install the basic software dependencies..." \
    && apt-get -y --no-install-recommends install \
        ca-certificates \
        curl \
        unzip \
    && echo "Install PHP packages..." \
    && apt-get update \
    && apt-get -y --no-install-recommends install \
        php8.1-bcmath \
        php8.1-cli \
        php8.1-common \
        php8.1-curl \
        php8.1-gd \
        php8.1-mbstring \
        php8.1-mysql \
        php8.1-redis \
        php8.1-soap \
        php8.1-sqlite3 \
        php8.1-xml \
        php8.1-intl \
        php8.1-zip \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/* /usr/share/doc/*

# Pull the official composer 2 image, and copy the composer executable from there
COPY --from=composer:2 /usr/bin/composer /usr/bin/composer

# Copy over S6 configurations
COPY --chmod=755 etc/s6-overlay/ /etc/s6-overlay/

# Set the default work directory to our web user
WORKDIR /var/www/html

#Configure S6 to drop priveleges
ENTRYPOINT ["/init"]

# Run PHP
CMD ["php", "-a"]