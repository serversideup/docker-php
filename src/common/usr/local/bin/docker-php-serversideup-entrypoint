#!/bin/sh
set -e

# Initialize variables
SERVERSIDEUP_DEFAULT_COMMAND="false"
S6_INITIALIZED="false"

# Enable debug mode if LOG_OUTPUT_LEVEL is set to "debug"
if [ "$LOG_OUTPUT_LEVEL" = "debug" ]; then
    echo "ðŸ”¥ðŸ”¥ðŸ”¥ DEBUG MODE has been set. Get ready for a ton of debug log output..."
    set -x
fi

# Check if the default command is being used
case "$1" in
    "/init" | "php-fpm")
        SERVERSIDEUP_DEFAULT_COMMAND="true"
        ;;
esac

# Check if S6 overlay is initialized
if [ -d "/etc/s6-overlay" ] && [ "$SERVERSIDEUP_DEFAULT_COMMAND" = "true" ]; then
    S6_INITIALIZED="true"
fi

# Export variables
export SERVERSIDEUP_DEFAULT_COMMAND
export S6_INITIALIZED

# Export the CMD for use in initialization scripts
export DOCKER_CMD="$*"

###############################################
# Usage: docker-php-serversideup-entrypoint
###############################################
# This script is used to execute scripts from "/etc/entrypoint.d" and then
# execute the CMD passed in from the Dockerfile.

# Execute scripts from /etc/entrypoint.d/ in numeric order
find /etc/entrypoint.d/ -type f -name '*.sh' | sort -V | while IFS= read -r f; do
    if [ -e "$f" ]; then
        if [ "$LOG_OUTPUT_LEVEL" = "debug" ]; then
            echo "ðŸ”„ Executing initialization script: $f"
        fi
        
        # Source the script in a subshell to contain exits while preserving environment
        (. "$f")
        exit_code=$?
        
        if [ "$LOG_OUTPUT_LEVEL" = "debug" ]; then
            echo "ðŸ“ Script $f completed with exit code: $exit_code"
        fi
        
        # Only stop on actual errors (non-zero exit codes)
        if [ $exit_code -ne 0 ]; then
            echo "âŒ Error: Initialization script $f failed with exit code $exit_code" >&2
            exit $exit_code
        fi
    else
        echo "âš ï¸ Warning: Initialization script $f not found" >&2
    fi
done

# first arg is `-f` or `--some-option`
if [ "${1#-}" != "$1" ]; then
	set -- php "$@"
fi

# Execute the CMD passed in from the Dockerfile
exec "$@"
