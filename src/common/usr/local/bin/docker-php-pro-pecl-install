#!/bin/sh
set -e

###############################################
# Usage: docker-php-pro-pecl-install [packages]
###############################################
# This script installs PECL packages passed in as arguments.

if [ $# -eq 0 ]; then
    echo "ðŸ”” WARNING: No packages were passed to the PECL installation script. We're assuming you don't want any additional packages installed."
    exit 0
fi

# Convert comma-delimited package names to space-separated
PECL_PACKAGES="$(echo $@ | tr ',' ' ')"

for ext in $PECL_PACKAGES; do
        pecl install "$ext"
done

docker-php-ext-enable "$@"